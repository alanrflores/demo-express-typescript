  "devDependencies": {
    "@types/express": "^4.17.13",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "eslint": "^8.23.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "4.8.3"
  },
  "dependencies": {
    "express": "4.18.1"
